{% extends 'base.html.twig' %}

{% block body %}
<div class="container" style="background-color: #C9C9C9">
    <h1>Список товаров</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Категория</th>
                <th>Вес</th>
                <th>Цена</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.category }}</td>
                <td>{{ product.weight }}</td>
                <td>{{ product.price }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('product_show', { 'id': product.id }) }}">Показать</a>
                    <a class="btn btn-success" href="{{ path('product_edit', { 'id': product.id }) }}">Редактировать</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('product_new') }}">Создать товар</a>
</div>
{% endblock %}
