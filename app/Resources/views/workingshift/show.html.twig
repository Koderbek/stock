{% extends 'base.html.twig' %}

{% block body %}
<div class="container" style="background-color: #C9C9C9">
    <h1>Смена</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ workingShift.id }}</td>
            </tr>
            <tr>
                <th>Дата</th>
                <td>{% if workingShift.date %}{{ workingShift.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Количество</th>
                <td>{{ workingShift.count }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('workingshift_index') }}">Назад к списку</a>
        </li>
        <li>
            <a href="{{ path('workingshift_edit', { 'id': workingShift.id }) }}">Редактировать</a>
        </li>
        <li>
            <a href="{{ path('workingshift_delete', { 'id': workingShift.id }) }}">Удалить</a>
        </li>
    </ul>
</div>
{% endblock %}
