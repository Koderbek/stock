{% extends 'base.html.twig' %}

{% block body %}
<div class="container" style="background-color: #C9C9C9">
    <h1>Список рабочих смен</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Дата</th>
                <th>Грузчик</th>
                <th>Товар</th>
                <th>Количество</th>
                {% if is_granted('ROLE_USER') %}
                    <th>Действия</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for workingShift in workingShifts %}
            <tr>
                <td>{{ workingShift.id }}</td>
                <td>{% if workingShift.date %}{{ workingShift.date|date('Y-m-d') }}{% endif %}</td>
                <td>{{ workingShift.porter }}</td>
                <td>{{ workingShift.product }}</td>
                <td>{{ workingShift.count }}</td>

                {% if is_granted('ROLE_USER') %}
                <td>

                    <ul>
                        <li>
                            <a href="{{ path('workingshift_show', { 'id': workingShift.id }) }}">Показать</a>
                        </li>
                        <li>
                            <a href="{{ path('workingshift_edit', { 'id': workingShift.id }) }}">Редактировать</a>
                        </li>
                    </ul>
                </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('workingshift_new') }}">Создать смену</a>
            {% elseif is_granted('ROLE_ADMIN') %}
                <a href="{{ path('workingshift_new') }}">Печатать отчет</a>
            {% endif %}
        </li>
    </ul>
</div>
{% endblock %}
