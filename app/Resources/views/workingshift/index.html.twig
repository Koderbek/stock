{% extends 'base.html.twig' %}

{% block body %}
    <h1>Список рабочих смен</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Дата</th>
                <th>Количество</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for workingShift in workingShifts %}
            <tr>
                <td><a href="{{ path('workingshift_show', { 'id': workingShift.id }) }}">{{ workingShift.id }}</a></td>
                <td>{% if workingShift.date %}{{ workingShift.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ workingShift.count }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('workingshift_show', { 'id': workingShift.id }) }}">Показать</a>
                        </li>
                        <li>
                            <a href="{{ path('workingshift_edit', { 'id': workingShift.id }) }}">Редактировать</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('workingshift_new') }}">Создать смену</a>
        </li>
    </ul>
{% endblock %}
