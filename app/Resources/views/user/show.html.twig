{% extends 'base.html.twig' %}

{% block body %}
<div class="container" style="background-color: #C9C9C9">
    <h1>Пользователь</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Имя</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Фамилия</th>
                <td>{{ user.surname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Роль</th>
                <td>{{ user.role }}</td>
            </tr>
        </tbody>
    </table>

        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-success" href="{{ path('user_index') }}">Назад к списку</a>
        {% endif %}
            <a class="btn btn-success" href="{{ path('user_edit', { 'id': user.id }) }}">Редактировать</a>
            <a class="btn btn-success" href="{{ path('user_delete', { 'id': user.id }) }}">Удалить</a>
</div>
{% endblock %}
