{% extends 'base.html.twig' %}

{% block body %}
    <h1>Пользователь</h1>

    <table>
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Имя</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>Фамилия</th>
                <td>{{ user.surname }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Роль</th>
                <td>{{ user.role }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('user_index') }}">Назад к списку</a>
        </li>
        <li>
            <a href="{{ path('user_edit', { 'id': user.id }) }}">Редактировать</a>
        </li>
        <li>
            <a href="{{ path('user_delete', { 'id': user.id }) }}">Удалить</a>
        </li>
    </ul>
{% endblock %}
