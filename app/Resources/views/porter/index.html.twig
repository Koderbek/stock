{% extends 'base.html.twig' %}

{% block body %}
<div class="container" style="background-color: #C9C9C9">
    <h1>Список грузчиков</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Общий вес</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for porter in porters %}
            <tr>
                <td><a href="{{ path('porter_show', { 'id': porter.id }) }}">{{ porter.id }}</a></td>
                <td>{{ porter.name }}</td>
                <td>{{ porter.surname }}</td>
                <td>{{ porter.totalWeight }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('porter_show', { 'id': porter.id }) }}">Показать</a>
                        </li>
                        <li>
                            <a href="{{ path('porter_edit', { 'id': porter.id }) }}">Редактировать</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('porter_new') }}">Создать грузчика</a>
        </li>
    </ul>
</div>
{% endblock %}
